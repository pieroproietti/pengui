#!/bin/bash 
source bin/program
cd ~/${PROGRAM}
DIRS_TO_DELETE=(build dist ${PROGRAM}* __pycache__)
rm "${DIRS_TO_DELETE[@]}" -rf || { echo "Error deleting files"; exit 1; }
find ~/${PROGRAM} -type d -name __pycache__ -exec rm -rf {} +

# Remove virtual environment
rm -rf venv_${PROGRAM}

# Create virtual environment
python3 -m venv venv_${PROGRAM}

# Install dependencies
source venv_${PROGRAM}/bin/activate

pip install pyinstaller
pip install pyside6
pip install pyyaml
pip install requests
pip install stickytape
pip install wheel


