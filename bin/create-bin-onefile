#!/bin/bash 
source bin/program
cd ~/${PROGRAM}

# Pulizia
rm ${PROGRAM}-0* -rf

# build
python -m nuitka \
        --enable-plugins=pyside6 \
        --include-qt-plugins=sensible \
        --onefile \
        --standalone \
        src/${PROGRAM}.py 

# pulizia
rm ${PROGRAM}.build -rf
rm ${PROGRAM}.dist -rf
#rm ${PROGRAM}.onefile-build -rf

cp ${PROGRAM}.bin ${PROGRAM}-${VERSION}${ARCHITECTURE}.bin